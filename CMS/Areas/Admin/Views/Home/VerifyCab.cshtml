@model IEnumerable<Cab>
@{
    ViewData["Title"] = "VerifyCab";
}

<div style="background-color:steelblue;" id="background-video" class="hero">
    <img src="~/Images/hero-bg.png" />
</div>

<div class="col-lg-5 order-1 order-lg-2 hero-img container" data-aos="zoom-out" style="float:left">
</div>


<div class="container" style="margin-left:40px;margin-top:100px">
    <div class="container-fluid">
        @if (Model.Any())
        {
            <div class="row">

                <table class="table table-striped bg-white">
                    <tr>
                        <th>Driver Name</th>
                        <th>Vehicle Number</th>
                        <th>Type</th>
                        <th>Model</th>

                    </tr>
                    @foreach (var cab in Model)
                    {
                        <tr>
                            <td>@cab.ApplicationUser.FirstName @cab.ApplicationUser.LastName</td>
                            <td>@cab.VehicleNumber</td>
                            <td>@cab.VehicleType</td>
                            <td>@cab.VehicleModel</td>
                            <td style="padding : 0px; margin : 0px ; width: 80px"><a asp-action="VerifyCab1" asp-route-id="@cab.VehicleNumber" class="btn btn-primary">Verify</a></td>
                            <td style="padding : 0px; margin : 0px"><a asp-action="Delete" asp-route-id="@cab.VehicleNumber" class="btn btn-danger" style="width:80px" onclick="return confirm('Do You Want To Delete @cab.VehicleNumber')">Delete</a></td>
                        </tr>
                    }
                </table>

            </div>
        }
        else
        {
            <div class="alert alert-info">
                No cabs were found.
            </div>
        }
    </div>

</div>
<script>
    let verifybtn = document.getElementById("dis");
    function disable(){
        verifybtn.innerHTML = "verified";
        //verifybtn.style.background = "#aab3bf"; 
        verifybtn.setAttribute('disabled',"");
    }
</script>


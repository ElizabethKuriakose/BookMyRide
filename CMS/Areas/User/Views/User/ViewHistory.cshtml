@model IEnumerable<Booking>
@{
    ViewData["Title"] = "ViewHistory";
}

<div style="background-color:steelblue;" id="background-video" class="hero">
    <img src="~/Images/hero-bg.png" />
</div>

<div class="col-lg-5 order-1 order-lg-2 hero-img container" data-aos="zoom-out" style="float:left">
</div>



<div class="container" style="margin-left:40px;margin-top:100px">
    <div class="container-fluid">
        @if (Model.Any())
        {
            <div class="row">

                <table class="table table-striped" style="background-color:white">
                    <tr>
                        <th>Booking Id</th>
                        <th>Source</th>
                        <th>Destination</th>
                        <th>Cost</th>
                        <th>Driver Name</th>
                        <th>Status</th>

                    </tr>
                    @foreach (var route in Model)
                    {
                        <tr>
                            <td>@route.Id</td>
                            <td>@route.RidePath.Source</td>
                            <td>@route.RidePath.Destination</td>
                            <td>@route.RidePath.Cost</td>
                            <td>@route.DriverId</td>
                            <td>@route.Status</td>
                           
                        </tr>
                    }
                </table>

            </div>
        }
        else
        {
            <div class="alert alert-info">
                Your History Is Empty
            </div>
        }
    </div>

</div>




